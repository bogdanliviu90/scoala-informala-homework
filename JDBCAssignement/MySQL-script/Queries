# This file holds the statements used to create the tables of school db and to insert some values inside all of them
CREATE DATABASE school;
USE school;

CREATE TABLE courses(
courseid int not null,
area varchar(64),
title varchar(64),
descrip varchar(255),
prereqs varchar(255),
PRIMARY KEY(courseid)
);

CREATE TABLE classes(
classid int,
courseid int not null,
days int,
starttime int,
endtime int,
bldg varchar(60),
roomnum int,
FOREIGN KEY(courseid) REFERENCES courses(courseid)
);

CREATE TABLE crosslistings(
courseid int not null,
dept varchar(64),
coursenum int,
FOREIGN KEY(courseid) REFERENCES courses(courseid)
);

CREATE TABLE profs(
profid int not null,
profname varchar(64),
PRIMARY KEY(profid)
);

CREATE TABLE coursesprofs(
courseid int not null,
profid int not null,
FOREIGN KEY(profid) REFERENCES profs(profid),
FOREIGN KEY(courseid) REFERENCES courses(courseid)
);

